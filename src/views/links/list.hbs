<div class="container p-4">
     <div class="row">
          {{#each links}} 
          <div class="col-md-3">
               <div class="card text-center">
                    <div class="card-body">
                         <a href={{url}} target="_blank" >
                              <h3 class="card-title text-uppercase">
                                   {{titleLink}}
                              </h3>
                         </a>
                              <p class="m-2">{{descripLink}}</p>
                              <p>{{convert dateCreate}}</p>
                              <a href="/links/delete/{{idLink}}" class="btn btn-danger">Delete</a>
                              <a href="" class="btn btn-secondary">Edit</a>
                    </div>
               </div>
          </div>
          {{else}}
               <div class="col-md-5 mx-auto">
                    <div class="card card-body text-center">
                         <p>Oh! no tienes ningun link guardado</p>
                         <a href="/links/add">Comienza ahora</a>
                    </div>
               </div>
           {{/each}}
     </div>
</div>